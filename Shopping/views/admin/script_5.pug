extends ../layout/main-layout.pug
block styles

    link(rel="stylesheet" href="/css/forms.css")

block content

    form(action="/admin/add-product" method="POST")
        .form-group.row
            label(for="name").col-sm-2.col-form-label Ürün İsim
            .col-sm-10
                input(type="text").form-control(id="name" name="name")

        .form-group.row
            label(for="price").col-sm-2.col-form-label Fiyat
            .col-sm-10
                input(type="text").form-control#price(name="price")

        .form-group.row
            label(for="imageUrl").col-sm-2.col-form-label Resim
            .col-sm-10
                input(type="text").form-control(id="image" name="imageUrl")
        
        .form-group.row
            label(for="categoryid").col-sm-2.col-form-label Category
            .col-sm-10
                select#categoryid.form-control(name="categoryid")
                    option(value="-1") Select Category
                    each category in categories
                        option(value=`${category.id}`) #{category.name} 

        .form-group.row
            label(for="description").col-sm-2.col-form-label Bilgi
            .col-sm-10
                textarea.form-control(name="description" cols="30" rows="10")

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit").btn.btn-primary(value="Ürünü Kaydet")